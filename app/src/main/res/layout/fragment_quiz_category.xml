                android:layout_height="wrap_content"
                android:text="@string/trypanosomaiase"/>

            <RadioButton
                android:id="@+id/fungal_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brucellosis"/>
        </RadioGroup>

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/agric_question_seven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/photosynthesis"
            android:textColor="#000"/>

        <RadioGroup
            android:id="@+id/agric_group_seven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/photosynthesis_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mineral_content"/>

            <RadioButton
                android:id="@+id/photosynthesis_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/colour_of_leaves"/>

            <RadioButton
                android:id="@+id/photosynthesis_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/electrical_conductivity"/>

            <RadioButton
                android:id="@+id/photosynthesis_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ferrous Oxide"/>
        </RadioGroup>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
