            android:textColor="#000"/>

        <RadioGroup
            android:id="@+id/agric_group_eight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/male_organ_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myomrtriem"/>

            <RadioButton
                android:id="@+id/male_organ_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ductus Deferens"/>

            <RadioButton
                android:id="@+id/male_organ_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/the_oviduct"/>

            <RadioButton
                android:id="@+id/male_organ_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/esophagus"/>
        </RadioGroup>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/agric_question_nine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/ruminant_digestive_tract"
            android:textColor="#000"/>

        <RadioGroup
            android:id="@+id/agric_group_nine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/ruminant_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rumen"/>

            <RadioButton
                android:id="@+id/ruminant_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cecum"/>

            <RadioButton
                android:id="@+id/ruminant_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gizzard"/>

            <RadioButton
                android:id="@+id/ruminant_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cervix"/>
        </RadioGroup>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/agric_question_ten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/monogastric_animal"
            android:textColor="#000"/>

        <RadioGroup
            android:id="@+id/agric_group_ten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/monogastric_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="They can synthesize their own protein"/>

            <RadioButton
                android:id="@+id/monogastric_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/they_can_regurgitate"/>

            <RadioButton
                android:id="@+id/monogastric_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cellullose_and_fiberes"/>

            <RadioButton
                android:id="@+id/monogastric_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/they_has_rumen"/>
        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/submit_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Quiz"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>


